<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_detail_view"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/text_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceSearchResultTitle"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_detail_view"/>



    <TextView
        android:id="@+id/text_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceSmall"
        app:layout_constraintTop_toBottomOf="@id/image_detail_view"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/text_detail_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceSmall"
        app:layout_constraintTop_toBottomOf="@id/text_detail_description"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/text_detail_directions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceSmall"
        app:layout_constraintTop_toBottomOf="@id/text_detail_ingredients"
        android:layout_margin="8dp" />


    <TextView
        android:id="@+id/text_detail_servings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceSmall"
        app:layout_constraintTop_toBottomOf="@id/text_detail_directions"
        android:layout_margin="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>